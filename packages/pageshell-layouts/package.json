{
  "name": "@pageshell/layouts",
  "version": "0.1.0",
  "description": "Theme-aware layout components for PageShell",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapters/next": {
      "types": "./dist/adapters/next.d.ts",
      "import": "./dist/adapters/next.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@pageshell/core": "workspace:*",
    "@pageshell/primitives": "workspace:*",
    "@pageshell/theme": "workspace:*",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-collapsible": "^1.1.12",
    "lucide-react": "^0.563.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "next": "^16.1.6",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pageshell/pageshell.git",
    "directory": "packages/pageshell-layouts"
  },
  "license": "MIT",
  "keywords": [
    "pageshell",
    "ui",
    "layouts",
    "react",
    "components"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/pageshell/pageshell#readme",
  "bugs": {
    "url": "https://github.com/pageshell/pageshell/issues"
  },
  "author": "PageShell Contributors"
}
