{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@parisgroup-ai/pageshell": ["../pageshell/src/index.ts"],
      "@parisgroup-ai/pageshell/core": ["../pageshell/src/core/index.ts"],
      "@parisgroup-ai/pageshell/core/*": ["../pageshell/src/core/*"],
      "@parisgroup-ai/pageshell/primitives": ["../pageshell/src/primitives/index.ts"],
      "@parisgroup-ai/pageshell/layouts": ["../pageshell/src/layouts/index.ts"],
      "@parisgroup-ai/pageshell/layouts/*": ["../pageshell/src/layouts/*"],
      "@parisgroup-ai/pageshell/interactions": ["../pageshell/src/interactions/index.ts"],
      "@parisgroup-ai/pageshell/composites": ["../pageshell/src/composites/index.ts"],
      "@parisgroup-ai/pageshell/composites/*": ["../pageshell/src/composites/*"],
      "@parisgroup-ai/pageshell/theme": ["../pageshell/src/theme/index.ts"],
      "@parisgroup-ai/pageshell/theme/*": ["../pageshell/src/theme/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/__tests__/**", "**/*.test.*"]
}
