{
  "name": "@pageshell/core",
  "version": "0.1.0",
  "description": "Core hooks, utils, and types for PageShell composites",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./hooks/form/useNavigationGuard": {
      "types": "./dist/hooks/form/useNavigationGuard.d.ts",
      "import": "./dist/hooks/form/useNavigationGuard.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./formatters": {
      "types": "./dist/formatters/index.d.ts",
      "import": "./dist/formatters/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./toast": {
      "types": "./dist/toast/index.d.ts",
      "import": "./dist/toast/index.js"
    },
    "./test-utils": {
      "types": "./dist/test-utils/index.d.ts",
      "import": "./dist/test-utils/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "peerDependencies": {
    "date-fns": "^3.0.0 || ^4.0.0",
    "react-router-dom": "^6.0.0 || ^7.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "sonner": "^1.7.0 || ^2.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.14",
    "jsdom": "^25.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "react",
    "hooks",
    "ui",
    "pageshell",
    "declarative"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pageshell/pageshell.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/pageshell/pageshell#readme",
  "bugs": {
    "url": "https://github.com/pageshell/pageshell/issues"
  },
  "author": "PageShell Contributors"
}
