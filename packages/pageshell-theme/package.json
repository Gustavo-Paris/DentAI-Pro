{
  "name": "@pageshell/theme",
  "version": "0.1.0",
  "description": "Theme context and configuration for PageShell composites",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./context": {
      "types": "./dist/context.d.ts",
      "import": "./dist/context.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@pageshell/primitives": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.11",
    "react": "^19.2.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "react",
    "theme",
    "ui",
    "pageshell",
    "context"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pageshell/pageshell.git",
    "directory": "packages/theme"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/pageshell/pageshell#readme",
  "bugs": {
    "url": "https://github.com/pageshell/pageshell/issues"
  },
  "author": "PageShell Contributors"
}
